<section>
<div class="container">
<div class="row mt-3">

    <a href="/admin/add-product" class="btn btn-success ml-auto">Add New Product</a>
</div>

<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Categorey</th>
      <th scope="col">Discription</th>
      <th scope="col">Image</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.discription}}</td>
      <td><img style="width: 70px;height:60px" src="/images/product-images/{{this._id}}.jpg" alt="" srcset=""></td>
       <td>{{this.price}}</td>
       <td><a href="/admin/edit-product/{{this._id}}"><button class="btn btn-primary">Edit</button></a></td>
       <td><a href="/admin/delete-product/{{this._id}}"><button  class="btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.name}}?')">Delete</button></a></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
</div>

</section>